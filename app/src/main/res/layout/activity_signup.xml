<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/loginHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#4FC3F7"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:rotation="340"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMarche"
                android:layout_width="407dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:text="VOUS serez le plus proche au marché de travail"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewFree"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginStart="20dp"
                android:text="C'est gratuit"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

    </LinearLayout>

    <!-- User Type Selection -->

    <!-- Input Fields Section -->

    <!-- Password Strength Guidance -->

    <!-- Divider Line -->

    <LinearLayout
        android:id="@+id/layoutVousEtes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dividerLine"
        android:layout_alignParentTop="true"
        android:layout_marginTop="154dp"
        android:layout_marginBottom="622dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewVousEtes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:text="Vous êtes :"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroupVousEtes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonRecruteur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Recruteur - cherche des CV et pose des annonces de travail"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/radioButtonCandidat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Candidat - cherche des annonces et pose des CV"
                android:textSize="13sp" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- Email Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_border"
                android:hint="Votre adresse email"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Ville Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewVille"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Ville:"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinnerVille"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_border"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Password Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_border"
                android:hint="Votre mot de passe"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:paddingTop="10dp"
                android:paddingEnd="8dp"
                android:paddingBottom="9dp" />

        </LinearLayout>

        <!-- Confirm Password Field -->

    </LinearLayout>

    <TextView
        android:id="@+id/textViewPasswordGuidance"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="304dp"
        android:text="Choisissez un mot de passe qui n'est pas facile à deviner (au moins 5 caractères)"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/textViewRewritePassword"
        android:layout_width="113dp"
        android:layout_height="28dp"
        android:layout_above="@+id/dividerLine"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="616dp"
        android:layout_marginBottom="227dp"
        android:text="mot de passe:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editViewRewritePassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_border"
        android:hint="Votre mot de passe"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingTop="10dp"
        android:paddingEnd="8dp"
        android:paddingBottom="9dp" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="602dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="222dp"
        android:layout_toEndOf="@+id/textViewRewritePassword"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button2"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="386dp"
        android:layout_marginTop="806dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="28dp"
        android:text="Creer un Compte"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="814dp"
        android:layout_marginEnd="506dp"
        android:layout_marginBottom="49dp"
        android:text="TextView" />

</RelativeLayout>