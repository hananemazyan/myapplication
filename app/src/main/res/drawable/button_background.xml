<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#26A69A" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true" android:drawable="@drawable/button_pressed_background" />
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Background color for disabled state -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
